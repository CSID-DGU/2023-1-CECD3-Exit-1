<resources>
    <!-- Base application theme. -->
    <style name="Theme.ExitMed" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/orange_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:includeFontPadding">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:timePickerStyle">@style/Theme.TimePickerDialog</item>
    </style>

    <!--  ImageView Style  -->
    <style name="Radius4">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Radius8">
        <item name="cornerSize">8dp</item>
    </style>

    <!--  Widget  -->
    <style name="Widget.Material.Button.Basic" parent="">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.FullButton.Basic" parent="Widget.Material.Button.Basic">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Theme.TimePickerDialog" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="Widget.Pill.Creation.Chip" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.BodyM1</item>
        <item name="android:textColor">@color/selector_pill_creation_chip_color</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:background">@drawable/selector_pill_creation</item>
    </style>
</resources>