<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.cecd.exitmed.presentation.auth.SignViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/spacing24" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/spacing24" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing24"
            android:src="@drawable/ic_close"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_sign_up_email_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing24"
            android:text="@string/cheokcheok"
            android:textAppearance="@style/TextAppearance.Title1"
            android:textColor="@color/orange_500"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@id/iv_close" />

        <TextView
            android:id="@+id/tv_sign_up_email_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_email_title1"
            android:textAppearance="@style/TextAppearance.Title2"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sign_up_email_title1"
            app:layout_constraintStart_toEndOf="@id/tv_sign_up_email_title1"
            app:layout_constraintTop_toTopOf="@+id/tv_sign_up_email_title1" />

        <TextView
            android:id="@+id/tv_sign_up_email_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/sign_up_email_title2"
            android:textAppearance="@style/TextAppearance.Title2"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@id/tv_sign_up_email_title1" />

        <TextView
            android:id="@+id/tv_sign_up_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/sign_up_email"
            android:textAppearance="@style/TextAppearance.BodyM1"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_email_title3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_radius_8_border_orange"
            android:paddingHorizontal="20dp"
            android:paddingVertical="6dp"
            android:text="@string/sign_up_email_double_check"
            android:textAppearance="@style/TextAppearance.CaptionM1"
            android:textColor="@color/orange_500"
            app:layout_constraintBottom_toBottomOf="@id/tv_sign_up_email"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintTop_toTopOf="@id/tv_sign_up_email" />

        <EditText
            android:id="@+id/et_sign_up_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_radius_8"
            android:backgroundTint="@color/lightgray_warm"
            android:hint="@string/sign_up_email_hint"
            android:maxLines="1"
            android:paddingVertical="14dp"
            android:paddingStart="20dp"
            android:text="@={viewModel.inputEmail}"
            android:textAppearance="@style/TextAppearance.BodyM1"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_200"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_email" />

        <TextView
            android:id="@+id/tv_sign_up_email_error"
            visibility="@{viewModel.isValidEmail == false &amp; !viewModel.inputEmail.empty}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/sign_up_email_error"
            android:textAppearance="@style/TextAppearance.CaptionM1"
            android:textColor="@color/error"
            app:layout_constraintEnd_toStartOf="@+id/gl_end"
            app:layout_constraintTop_toBottomOf="@id/et_sign_up_email" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next"
            style="@style/Widget.FullButton.Basic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing24"
            android:background="@drawable/shape_radius_8"
            android:enabled="@{viewModel.isValidEmail}"
            android:paddingVertical="12dp"
            android:text="@string/next"
            android:textAppearance="@style/TextAppearance.BodyM2"
            android:textColor="@color/selector_complete_button_text_color"
            app:backgroundTint="@color/selector_complete_button_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>