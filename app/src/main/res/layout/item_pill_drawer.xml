<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="DrawerPill"
            type="com.cecd.exitmed.domain.type.DrawerPill" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/spacing24"
        android:paddingVertical="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_pill"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Radius4" />

        <TextView
            android:id="@+id/tv_pill_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@{DrawerPill.title}"
            android:textAppearance="@style/TextAppearance.BodyM1"
            app:layout_constraintStart_toEndOf="@id/iv_pill"
            app:layout_constraintTop_toTopOf="@id/iv_pill"
            tools:text="타이레놀" />

        <TextView
            android:id="@+id/tv_pill_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:text="@{DrawerPill.category}"
            android:textAppearance="@style/TextAppearance.BodyM3"
            android:textColor="@color/gray_400"
            app:layout_constraintStart_toEndOf="@id/iv_pill"
            app:layout_constraintTop_toBottomOf="@id/tv_pill_name"
            tools:text="진통제" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_pill_alram"
            selected="@{DrawerPill.alarm}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>