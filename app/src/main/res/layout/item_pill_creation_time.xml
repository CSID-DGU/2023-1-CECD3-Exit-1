<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_pill_creation_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing24"
        android:layout_marginBottom="12dp"
        android:background="@drawable/shape_radius_12_border_orange"
        android:gravity="center_vertical"
        android:hint="오전 10:00"
        android:paddingVertical="20dp"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.BodyM1"
        android:textColorHint="@color/gray_300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_pill_creation_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="12dp"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintBottom_toBottomOf="@id/tv_pill_creation_time"
        app:layout_constraintEnd_toEndOf="@id/tv_pill_creation_time"
        app:layout_constraintTop_toTopOf="@id/tv_pill_creation_time" />
</androidx.constraintlayout.widget.ConstraintLayout>