<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.cecd.exitmed.presentation.pillCreation.PillCreationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_pill_creation_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing24"
            android:text="@string/pill_creation_memo_title"
            android:textAppearance="@style/TextAppearance.Title2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_pill_creation_memo"
            android:layout_width="0dp"
            android:layout_height="196dp"
            android:layout_marginHorizontal="@dimen/spacing24"
            android:layout_marginTop="@dimen/spacing24"
            android:background="@drawable/shape_radius_12_border_black"
            android:gravity="top"
            android:hint="@string/pill_creation_memo_content_hint"
            android:padding="20dp"
            android:text="@={viewModel.pillMemo}"
            android:textAppearance="@style/TextAppearance.BodyM1"
            android:textColorHint="@color/gray_300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pill_creation_memo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="@{@string/pill_creation_memo_content(viewModel.pillMemo.length)}"
            app:layout_constraintBottom_toBottomOf="@id/et_pill_creation_memo"
            app:layout_constraintEnd_toEndOf="@id/et_pill_creation_memo"
            tools:text="0/200" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>